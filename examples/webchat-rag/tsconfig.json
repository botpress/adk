{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "paths": {
      "@botpress/runtime/_types/*": [
        "./.adk/*-types"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".adk/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
